# Application
APP_NAME=control-plane
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/control_plane

# Supabase (alternative to direct PostgreSQL)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Docker Settings (for runtime management)
DOCKER_HOST=unix:///var/run/docker.sock
RUNTIME_IMAGE=voice-agent-runtime:latest
RUNTIME_NETWORK=control_plane_network

# Twilio Settings
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token

# OpenAI (for summary generation)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4.1-mini

# Storage (for recordings)
S3_BUCKET=recordings
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1
S3_ENDPOINT=

# Logging
LOG_LEVEL=INFO
